
<div class="hero-section">
    <div class="hero-content">
        <h1 id="h1-hero">Hey, I'm Manny Pachano</h1>
        <h4>I make responsive, beautiful websites. But so does every other web developer these days. The difference is: I code my sites so that they're really... really... fast.</h4>
        <a href="/#project-section">
            <button>projects</button>
        </a>
    </div>
    <div class="manny-img" id="manny-img"></div>
    <div class="mouse-section">
        <div class="mouse"></div>
    </div>
</div>

<style>

    .hero-section {
        height: calc(100vh - 5rem);
        min-height: 36.5rem;
        background: linear-gradient(to right, rgba(245, 245, 245, 0.8), rgba(245, 245, 245, 0.8)), url(/images/common-bg.svg);
        position: relative;
    }

    .hero-content {
        text-align: center;
        width: 92%;
        max-width: 45rem;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);  
        z-index: 1;
    }

    .mouse-section {
        position: absolute;
        bottom: 3%;
        left: 50%;
        transform: translateX(-50%);
    }

    .mouse {
        width: 25px;
        height: 40px;
        border: 2px solid #333;
        border-radius: 60px;
        position: relative;
        overflow: hidden;
    }

    .mouse::before {
        content: '';
        width: 5px;
        height: 5px;
        position: absolute;
        top: 7px;
        left: 50%;
        transform: translateX(-50%);
        background-color: #333;
        border-radius: 50%;
        opacity: 1;
        animation: scroll 1.3s infinite;
    }

    @keyframes scroll {
        100% {
            opacity: 0%;
            top: 27px;
        }
    }

    .manny-img {
        background: linear-gradient(to right, rgba(245, 245, 245, 0.3), rgba(245, 245, 245, 0.3)), url(/images/manny-img.webp);
        background-size: cover;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        transition: all ease-in-out .45s;
    }

    .hero-section, .about-section, .projects-section, .contact-section, footer, .project-summary-section {
        min-width: 320px;
    }
</style>

<script>
    // SHOW MANNY BACKGROUND IMAGE 

    const mannyIMG = document.getElementById('manny-img');
    const heroH1 = document.getElementById("h1-hero");

    function showManny() {
        if(mannyIMG && heroH1){
            setTimeout(function(){
                mannyIMG.classList.add("animate-img");
            }, 1000);
        
            setTimeout(function(){
                heroH1.classList.add("animate-h1");
            }, 1500);
            
            setTimeout(function(){
                heroH1.classList.remove("animate-h1");
            }, 1720);
            
            setTimeout(function(){
                heroH1.classList.add("animate-h1");
            }, 1900);
            
            setTimeout(function(){
                heroH1.classList.remove("animate-h1");
            }, 2120);

            setTimeout(function(){
                mannyIMG.classList.remove("animate-img");
            }, 2400);
        }
    }

    showManny();
</script>